[Unit]
Description=MyDeepBlue Service
After=network.target
StartLimitBurst=5
StartLimitIntervalSec=10

[Service]
WorkingDirectory=/home/$user/odc/opendatacam-deepstream
User=$user
Group=$user
SyslogIdentifier=mydeepblue
Type=notify
Restart=always
#Restart=on-failure
#RestartSec=1
Watchdogsec=3

ExecStart=/usr/bin/npm run start

StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
